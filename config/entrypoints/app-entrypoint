#!/bin/sh
set -e

# ---------------------------------------------------------------------
# Functions
# ---------------------------------------------------------------------
print_header() {
  echo "------------------------------------------"
  echo "$1"
  echo "------------------------------------------"
}

# ---------------------------------------------------------------------
# Launch Apache2 in background mode.
# ---------------------------------------------------------------------
# first arg is `-f` or `--some-option`
print_header "Starting Apache2 ..."
if [ "${1#-}" != "$1" ]; then
	set -- apache2-foreground "$@"
fi

exec "$@"
